@using Microsoft.AspNetCore.Identity
@using Learn_Academy.Models
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

@if (SignInManager.IsSignedIn(User))
{
    <form asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Page("/Index", new { area = "" })" method="post" id="logoutForm" class="navbar-right">
        <ul class="nav navbar-nav navbar-right">
            <li>
                <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Hello @UserManager.GetUserName(User)!</a>
            </li>
            <li>
                <button type="submit" class="nav-link text-dark custom-logout-button"><span>Logout</span></button>
            </li>
        </ul>
    </form>
}
else
{
    <ul class="nav navbar-nav navbar-right">
        <li>
            <a class="nav-link text-dark custom-register-button" asp-area="Identity" asp-page="/Account/Register"><span>Register</span></a>
        </li>
        <li>
            <a class="nav-link text-dark custom-login-button" asp-area="Identity" asp-page="/Account/Login"><span>Login</span></a>
        </li>
    </ul>
}
